@model List<Document_Management_Solution.Models.WebDocumentModel>
@{
    ViewBag.Title = "DocumentSearch";
    var grid = new WebGrid(Model);

}

<h2>Search for a Document</h2>

<form method="post">
    <span class="inputLabel">Document Title:</span>  @Html.TextBox("DocumentTitle")<br /><br />

    <span class="inputLabel">Document Id:</span> @Html.TextBox("DocumentId")<br /><br />

    <input type="submit" value="Search" /><br />

</form><br /><br />

<div id="grid">

    @grid.GetHtml(columns: grid.Columns(
grid.Column("DocumentTitle", "Document Title"),
grid.Column("DocumentId", "Document Id"),
grid.Column("FileName", "File"),
grid.Column("", "Download", format: (documentModel) => {
    return Html.ActionLink("Download File", "Download", new { Id = documentModel.Id });
    })))


</div>


